{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "isolatedModules": false,
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@*": ["./*"]
        },
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "NodeNext",
        "moduleResolution": "nodenext"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/**/**.js", ".generated"]
}